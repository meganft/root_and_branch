<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3"><div class="item_<%=item.id%>"> <div class="card"><%= link_to image_tag(item.image, class: "img-thumbnail item-grid"), item_path(item) %>
      <div class="card-text"><p class="split"><%= item.title %> <span><%= number_to_currency(item.price) %></span>
        <% if item.retired? %>
        <p><button class="btn btn-success btn-sm disabled">Item Retired</button></p>
        <% else %>
        <%= button_to "Add to cart", cart_path(item_id: item.id), class: "btn btn-success btn-sm" %>
        <% end %>
      </p></div></div></div></div>
    <% end %>
  </div>
</div>
