<h2>Create a New Account</h2>

<%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit "Create Account" %>
  <% end %>
